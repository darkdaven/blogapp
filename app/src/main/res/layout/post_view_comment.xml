<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/post_holder_card"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="1">

                <TextView
                    android:id="@+id/view_comment_name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|top"
                    android:fontFamily="@font/roboto_light"
                    android:text="Jose Ariel Herrera"
                    android:textColor="@color/primaryDarkColor"
                    android:textSize="18sp" />

                <ImageButton
                    android:id="@+id/view_comment_profile_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top|end"
                    android:adjustViewBounds="true"
                    android:background="@color/primaryDarkColor"
                    android:contentDescription="Profile Image"
                    android:padding="2dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_face_24px"
                    android:tint="@color/primaryTextColor" />

            </GridLayout>


            <TextView
                android:id="@+id/view_comment_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:text="This email appâ€™s cards have been customized using Material Theming."
                android:textColor="@color/secondaryLightColor"
                android:textSize="20sp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1">

                <TextView
                    android:id="@+id/view_comment_email_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:fontFamily="@font/roboto_light"
                    android:text="ariel.herrera@itla.com"
                    android:textColor="@color/secondaryLightColor"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/view_comment_createdAt_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="end"
                    android:text="25 Nov 19, 09:40 AM"
                    android:textColor="@color/secondaryLightColor"
                    android:textSize="10sp" />

            </GridLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>